@{
    ViewData["Title"] = "Gestión de Animales";
    var nombreUsuario = User.Identity?.Name ?? "Usuario";
}

<div class="main-content" style="text-align:center; padding:3rem 1rem; max-width: 1000px; margin:auto;">

    <h1 class="main-title" style="color:#2b2b2b; font-size:2.2rem; margin-bottom:2.5rem;">
        Panel de animales
    </h1>

    <div class="options" style="display:flex; justify-content:center; gap:2rem; flex-wrap:wrap;">

        <!-- Card 1: Cargar Animal -->
        <div class="option-card" style="background:#FBF4EB; border:2px solid #e6e6e6; border-radius:1.5rem; padding:2rem 1.5rem; width:280px; box-shadow:0 4px 8px rgba(0,0,0,0.05); transition:transform 0.3s;">
            <h3 style="color:#DE5C8F; margin-bottom:1rem; font-size:1.3rem;">Cargar Animal</h3>
            <p style="color:#555; font-size:0.95rem; margin-bottom:1.5rem;">Agregá un nuevo animal al sistema.</p>
            <a href="/Animales/Create" class="btn-option">Ir a carga</a>
        </div>

        <!-- Card 2: Modificar Animal -->
        <div class="option-card" style="background:#FBF4EB; border:2px solid #e6e6e6; border-radius:1.5rem; padding:2rem 1.5rem; width:280px; box-shadow:0 4px 8px rgba(0,0,0,0.05); transition:transform 0.3s;">
            <h3 style="color:#DE5C8F; margin-bottom:1rem; font-size:1.3rem;">Modificar Animal</h3>
            <p style="color:#555; font-size:0.95rem; margin-bottom:1.5rem;">Editá o eliminá animales existentes.</p>
            <a href="/Animales/List" class="btn-option">Ir a modificaciones</a>
        </div>

        <!-- Card 3: Especificaciones Generales -->
        <div class="option-card" style="background:#FBF4EB; border:2px solid #e6e6e6; border-radius:1.5rem; padding:2rem 1.5rem; width:280px; box-shadow:0 4px 8px rgba(0,0,0,0.05); transition:transform 0.3s;">
            <h3 style="color:#DE5C8F; margin-bottom:1rem; font-size:1.3rem;">Especificaciones Generales</h3>
            <div style="display:flex; flex-direction:column; gap:0.5rem;">
                <a href="/Animales/Especie" class="btn-option">Administrar especie</a>
                <a href="/Animales/Tamaño" class="btn-option">Administrar tamaño</a>
                <a href="/Animales/Raza" class="btn-option">Administrar raza</a>
                <a href="/Animales/Estado" class="btn-option">Administrar estado</a>
            </div>
        </div>

    </div>
</div>

<style>
    .btn-option {
        background-color: #DE5C8F;
        color: white;
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 1rem;
        font-family: Consolas, monospace;
        font-size: 1rem;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s;
        text-align: center;
    }

    .btn-option:hover {
        background-color: #872d72;
    }
</style>
