@model List<LoginMVC.Models.AnimalRazaModel>

@{
    ViewData["Title"] = "Lista de Razas";
}

<style>
    /* Paleta de colores
            #EEE2DF -- cremita
            #DEC1DB -- rosa bebé
            #5B61B2 -- lila azulado
            #2F80E4 -- azul
            #6DA0E1 -- celeste
            #EDABBE -- rosita fondo
            #DE5C8F -- rosa botones
            #7C4EBB -- violeta banner
            #872d72 -- violeta vino
            #FBF4EB -- card
        */
    .main-container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 1rem;
        font-family: Consolas, monospace;
    }

    .form-title {
        text-align: center;
        color: #DE5C8F;
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .styled-table {
        border-collapse: collapse;
        margin: 1rem auto;
        font-size: 1rem;
        font-family: Consolas, monospace;
        width: 100%;
        background-color: #FBF4EB;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .styled-table thead {
        background-color: #DE5C8F;
        color: white;
    }

    .styled-table th,
    .styled-table td {
        padding: 1rem;
        text-align: left;
    }

    .styled-table tbody tr:nth-child(even) {
        background-color: #EEE2DF;
    }

    .styled-table tbody tr:hover {
        background-color: #DEC1DB;
        transition: background-color 0.3s ease;
    }

    .btn-submit {
        background-color: #DE5C8F;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        font-family: Consolas, monospace;
        border: none;
        border-radius: 0.8rem;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-submit:hover {
        background-color: #872d72;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .bottom-button-container {
        display: flex;
        justify-content: flex-end;
        margin-top: 1rem;
    }
</style>

<div class="main-container">
    <h2 class="form-title">Lista de Razas</h2>

    <table class="styled-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var raza in Model)
                {
                    <tr>
                        <td>@raza.idRaza</td>
                        <td>@raza.descripcion</td>
                        <td>
                            <div class="action-buttons">
                                <a href="/Animales/EditarRaza/@raza.idRaza" class="btn-submit">Editar</a>
                                <a href="/Animales/EliminarRaza/@raza.idRaza" class="btn-submit" onclick="return confirm('¿Estás segura que querés eliminar esta raza?');">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" style="text-align:center; color:#999;">No hay razas cargadas.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="bottom-button-container">
        <a href="/Animales/CrearRaza" class="btn-submit">Agregar Nueva Raza</a>
    </div>
</div>
