@model List<LoginMVC.Models.AnimalEstadoModel>

@{
    ViewData["Title"] = "Lista de Estados";
}

<style>
    .main-container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 1rem;
        font-family: Consolas, monospace;
    }

    .form-title {
        text-align: center;
        color: #DE5C8F;
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .styled-table {
        border-collapse: collapse;
        margin: 1rem auto;
        font-size: 1rem;
        font-family: Consolas, monospace;
        width: 100%;
        background-color: #FBF4EB;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

        .styled-table thead {
            background-color: #DE5C8F;
            color: white;
        }

        .styled-table th,
        .styled-table td {
            padding: 1rem;
            text-align: left;
        }

        .styled-table tbody tr:nth-child(even) {
            background-color: #EEE2DF;
        }

        .styled-table tbody tr:hover {
            background-color: #DEC1DB;
            color: white;
        }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-submit {
        background-color: #DE5C8F;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        font-family: Consolas, monospace;
        border: none;
        border-radius: 0.8rem;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #872d72;
        }

    .btn-agregar {
        display: inline-block;
        margin-top: 1.5rem;
        float: right;
    }

    .mensaje-vacio {
        text-align: center;
        font-style: italic;
        color: #999;
        margin-top: 1rem;
    }
</style>

<div class="main-container">
    <h2 class="form-title">Lista de Estados</h2>

    @if (Model == null || !Model.Any())
    {
        <p class="mensaje-vacio">No hay estados cargados.</p>
    }
    else
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var estado in Model)
                {
                    <tr>
                        <td>@estado.idEstado</td>
                        <td>@estado.descripcion</td>
                        <td>
                            <div class="action-buttons">
                                <a href="/Animales/EditarEstado/@estado.idEstado" class="btn-submit">Editar</a>
                                <a href="/Animales/EliminarEstado/@estado.idEstado" class="btn-submit" onclick="return confirm('¿Estás segura que querés eliminar este estado?');">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="/Animales/AgregarEstado" class="btn-submit btn-agregar">Agregar Estado</a>
</div>
