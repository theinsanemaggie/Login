@{
    ViewData["Title"] = "Usuarios";
}

<div class="contenedor-principal">
    <h1 class="titulo-usuarios">Alta de Usuarios</h1>

    <form asp-controller="User" asp-action="ForMethod" method="get" class="formulario-usuarios">
        <div class="campo">
            <label>Username:</label>
            <input type="text" name="username" />
        </div>
        <div class="campo">
            <label>Password:</label>
            <input type="password" name="password" />
        </div>
        <div class="campo">
            <label>Email:</label>
            <input type="email" name="email" />
        </div>
        <div class="campo">
            <label>Nombre:</label>
            <input type="text" name="name" />
        </div>
        <div class="campo">
            <label>Apellido:</label>
            <input type="text" name="lastname" />
        </div>
        <div class="campo">
            <label>Fecha de nacimiento:</label>
            <input type="datetime" name="birthday" />
        </div>

        <button type="submit" class="btn-guardar">Guardar y cargar personas</button>
    </form>

@if (ViewBag.Message != null)
{
        <div style="color: green; font-weight: bold;">
            @ViewBag.Message
        </div>
}

@if (ViewBag.Error != null)
{
        <div style="color: red; font-weight: bold;">
            @ViewBag.Error
        </div>
}
