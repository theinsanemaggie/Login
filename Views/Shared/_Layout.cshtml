<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Maggieweb</title>
    <style>
        body {
            margin: 0;
            font-family: Consolas, sans-serif;
            background-color: #EDEBDD;
        }

        .navbar {
            background-color: #AA0235;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-left, .navbar-right {
            display: flex;
            align-items: center;
        }

        .navbar a, .navbar form button {
            color: #fff;
            text-decoration: none;
            font-family: Consolas, sans-serif;
            margin: 0 0.5rem;
            font-weight: bold;
            background: none;
            border: none;
            cursor: pointer;
            padding: 0;
        }

            .navbar a:hover, .navbar form button:hover {
                text-decoration: underline;
            }

        .container {
            padding: 2rem;
            text-align: center;
        }

        .card {
            background-color: #AA0235;
            border-radius: 2rem;
            width: 300px;
            text-align: center;
            padding: 1.5rem;
            display: inline-block;
            margin-bottom: 2rem;
        }

        h1 {
            color: #fff;
            font-family: Consolas, sans-serif;
        }

        p {
            color: #fff;
            font-family: Consolas, sans-serif;
            font-size: 1.2rem;
        }

        .wrapper {
            flex: 1;
        }

        .footer {
            background-color: #AA0235;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="navbar-left">
            <a asp-controller="Home" asp-action="Index">INICIO</a>
            <a asp-controller="User" asp-action="Index">ALTA USUARIO</a>
            <a asp-controller="User" asp-action="List">CONTROL USUARIO</a>
  
        </div>
        <div class="navbar-right">
            <form asp-controller="Login" asp-action="Logout" method="post">
                <button type="submit">CERRAR SESIÓN</button>
            </form>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <div class="wrapper">
        @RenderBody()
    </div>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year Maggieweb - Todos los derechos reservados</p>
    </footer>
</body>
</html>
