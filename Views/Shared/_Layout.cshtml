<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Maggieweb</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #fff6e9;
        }

        .navbar {
            background-color: #ffe8ce;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar a {
            color: #ff7b00;
            text-decoration: none;
            margin: 0 0.5rem;
            font-weight: bold;
        }

        .circle {
            width: 30px;
            height: 30px;
            background-color: #ff7b00;
            border-radius: 50%;
        }

        .container {
            padding: 2rem;
            text-align: center;
        }

        .card {
            background-color: white;
            padding: 1.5rem;
            border-radius: 1.5rem;
            display: inline-block;
            margin-bottom: 2rem;
        }

        h1 {
            color: #ff7b00;
        }

        p {
            color: #ff7b00;
            font-size: 1.2rem;
        }

        .wrapper {
            flex: 1;
        }

        .footer {
            background-color: #fde6cc;
            color: #ff7300;
            text-align: center;
            padding: 1rem 0;
            font-size: 0.9rem;
            position: relative;
            bottom: 0;
            width: 100%;
            border-top: 1px solid #ffcd9b;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div>
            <a href="#">Inicio</a>
            <a href="#">Perfil</a>
            <a href="#">Ayuda</a>
        </div>
        <div class="circle"></div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <div class="wrapper">
        @RenderBody()
    </div>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year Maggieweb - Todos los derechos reservados</p>
    </footer>
</body>
</html>
